{% extends 'base.html.twig' %}

{% block title %}Hello Symfony with Vue!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}

<div class="">
    <div id="app">
{#        {% verbatim %}#}
        <span>Variable: ${ name }</span><br>
        <span>Methods: ${ showName() }</span>
{#        {% endverbatim %}#}
        <div class="">
            <a v-bind:href="href" v-bind:style="customStyle">Vue Docs</a>
        </div>
        <h4>Number Increment Decrement</h4>
        <div>
            <button @click="decrement">-</button>
            <input type="text" v-bind:value="number">
            <button v-on:click="increment">+</button>
        </div>
    </div>
</div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}